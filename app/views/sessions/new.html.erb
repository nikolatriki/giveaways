<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <div class="content">
      <h4>Log in</h4>
    </div>

      <%= form_with url: login_path, scope: :session, local: true do |form| %>
        <div class="field">
          <%= form.label :email, class: "label" %>
          <div class="control">
             <%= form.email_field :email, class: "input", placeholder: "Email here"  %>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, class: "label" %>
          <div class="control">
             <%= form.password_field :password, class: "input", placeholder: "Password here"  %>
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <%= form.submit 'submit', class: "button is-link"  %>
          </div>
          <div class="control">
            <%= link_to 'Cancel', root_path, class: "button is-link is-light" %>
          </div>
        </div>
      <% end %>
  </div>
</div>


