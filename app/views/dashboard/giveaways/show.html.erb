<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3"><div class="box">
      <div class="card">
        <div class="card-content">
          <div class="content">
            
            <small><%= l(@giveaway[:created_at], format: :short) %></small>
            <p><code class="html"><%= @giveaway.location %></code></p>
            <h2><%= @giveaway.title %></h2>
            <p><%= @giveaway.description %></p>
            <small><p><%= t('.contact') %>: <%= link_to @giveaway.user.name.capitalize, user_path(id: @giveaway.user_id) %></br> 

            <% unless @giveaway.pictures.empty? %>
              <%= render 'pictures/picture'%>
            <% else %>
              <div class="image">
                no images
              </div>
            <% end %>
            <%= render 'footer' %><br>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% @comments.each do |comment| %>
  <%= render partial: 'comments/comment', collection: @comments, as: :comment %>
<%end%>
