<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <small><%= l(@giveaway[:created_at], format: :short) %></small><br>
            <p><code class="html"><%= @giveaway.location %></code></p>
            <h2><%= @giveaway.title %></h2>
            <p><%= @giveaway.description %></p>
            <small><p><%= t('.contact') %>: <%= link_to @giveaway.user.name.capitalize, user_path(id: @giveaway.user_id) %></br> 
            <%= t('.phone')%>: 070-244-122</p></small><br>
            <%= render 'pictures/picture'%>
            <%= render 'footer' %><br>
            <h3>Claimed by:</h3>
            <ul>
              <% @giveaway.claims.each do |c|%>
                <li><%= link_to c.user.name, user_path(c.user) %></li>
                  <button class="button is-success">
                    <span class="icon is-small">
                      <i class="fas fa-check"></i>
                    </span>
                    <span>Approve</span>
                  </button>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% @comments.each do |comment| %>
  <%= render comment %>
<% end %>

