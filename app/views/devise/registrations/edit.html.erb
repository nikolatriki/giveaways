<div class="container">
  <div class="column is-6 is-offset-3">
    <article class="media">
      <div class="media-content">
        <div class="content is-small">
          <h2><%= t('.edit_user') %></h2>
        </div>
      </div>
    </article>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t('devise.registrations.new.email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.waiting') %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label t('devise.registrations.new.password')%> <i>(<%= t('.leave_blank') %>)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> <%= t('.characters') %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label t('.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label t('.current_password') %> <i>(<%= t('.ppass')%>)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit t('.update'), class: "button is-link mb-6" %>
      </div>
    <% end %>
    <div class="mb-4">
      <h2><strong><%= t('.cancel') %></strong></h2>
    </div>

    <p><%= t('.unhappy') %> <%= button_to t('.cancel'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-link is-light" %></p>

  </div>
</div>