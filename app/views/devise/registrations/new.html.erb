<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <div class="content">

      <div class="hero-body has-text-centered">
        <div class="login">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :name, 'Username', class: "label"  %>
                <%= f.text_field :name, required: true, class:"input is-medium is-rounded", placeholder:"Username" %>
            </div>
            <div class="field">
              <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input is-medium is-rounded", placeholder:"hello@example.com" %>
            </div>
            <div class="field">
              <%f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"input is-medium is-rounded", placeholder:"**********" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input is-medium is-rounded", placeholder:"**********" %>
            </div>
            <br />
            <div class="actions">
              <%= f.submit "Sign Up", class:"button is-block is-fullwidth is-primary is-medium is-rounded"  %>
            </div>
          <% end %>
          <br>
          <nav class="level-item">
            <div class="has-text-centered">
              <%= render "devise/shared/links" %>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>