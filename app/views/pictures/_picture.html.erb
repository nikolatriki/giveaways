
    <article class="media">
      <div class="media-content">
        <div class="content">
          <% @giveaway.pictures.each do |i| %>
            <%= image_tag i.image %>
            <% if local_assigns[:edit]%>
              <%= link_to 'Delete', giveaway_picture_path(i.giveaway, i),
                    method: :delete,
                    data: { confirm: 'Are you shure you want to delete this picture?'} %>
            <% end %>
          <% end %>
        <div>
      </div>
    </article>
