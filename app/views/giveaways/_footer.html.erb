<footer class="modal-card-foot" style="justify-content: space-between">
  <%= link_to t('.back'), giveaways_path, class: "button is-light" %>

  <% if user_signed_in? && current_user == @giveaway.user%>
    <p>
      <%= link_to edit_giveaway_path(@giveaway) do %>
          <i class="fas fa-edit fa-2x"></i>
      <% end %>
    </p>

    <p>
      <%= link_to giveaway_path(@giveaway), method: :delete,
        data: { confirm: t('.confirm')} do
      %>
      <i class="far fa-trash-alt fa-2x"></i>
      <% end %>
    </p>
  <% end %>
</footer>
 