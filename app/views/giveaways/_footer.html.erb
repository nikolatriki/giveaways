<footer class="modal-card-foot" style="justify-content: space-between">
  <%= link_to 'Back', giveaways_path, class: "button is-outlined is-medium" %>
  <% if user_signed_in? && current_user != @giveaway.user && @giveaway.claims.find_by(user_id: current_user.id)%>
    <button class="button is-primary" title="Disabled button" disabled>Claimed</button>
  <% elsif user_signed_in? && current_user != @giveaway.user %>
      <%= button_to 'Claim', 
                    giveaway_claims_path(@giveaway), 
                    data: { confirm: 'The Giver will be notified about your claim, proceed?'},
                    class: "button is-primary" %>
  <% end %>

  <% if user_signed_in? && current_user == @giveaway.user%>
    <p>
      <%= link_to edit_giveaway_path(@giveaway) do %>
          <i class="fas fa-edit fa-2x"></i>
      <% end %>
    </p>

    <p>
      <%= link_to giveaway_path(@giveaway), method: :delete,
        data: { confirm: 'Are you sure you want to delete this giveaway?'} do
      %>
      <i class="far fa-trash-alt fa-2x"></i>
      <% end %>
    </p>
  <% end %>
</footer>
