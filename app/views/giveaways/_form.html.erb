<% if @giveaway.errors.any? %>
  <ol>
    <% @giveaway.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_with model: @giveaway, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "50x10" %>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
