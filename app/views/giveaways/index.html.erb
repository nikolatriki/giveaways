<div class="column has-text-centered">
    <h1 class="title" style="color: #f14999;">Welcome to Giveaways</h1><br>
</div>
<div class="columns is-mobile is-multiline">
    <% @giveaways.each do |giveaway|%>
        <div class="box" style="margin-bottom: 24px">
            <div class="column is-narrow">
                <p class="bd-notification is-primary">
                    <code class="html"><small> <%= giveaway.location %></small></code><br>
                    <h2><%= link_to giveaway.title.truncate(15), giveaway_path(giveaway) %></h2>
                </p>
                <figure class="image is-128x128">
                      <%= link_to image_tag("https://bulma.io/images/placeholders/128x128.png"), giveaway_path(giveaway)%>
                </figure>
            </div>
        </div>
    <% end %>
</div>

<nav class="pagination is-centered" role="navigation" aria-label="pagination">
  <a class="pagination-previous">Previous</a>
  <a class="pagination-next">Next page</a>
  <ul class="pagination-list">
    <li><a class="pagination-link" aria-label="Goto page 1">1</a></li>
    <li><span class="pagination-ellipsis">&hellip;</span></li>
    <li><a class="pagination-link" aria-label="Goto page 45">45</a></li>
    <li><a class="pagination-link is-current" aria-label="Page 46" aria-current="page">46</a></li>
    <li><a class="pagination-link" aria-label="Goto page 47">47</a></li>
    <li><span class="pagination-ellipsis">&hellip;</span></li>
    <li><a class="pagination-link" aria-label="Goto page 86">86</a></li>
  </ul>
</nav>
<%== pagy_nav(@pagy) unless @giveaways.empty? %>
