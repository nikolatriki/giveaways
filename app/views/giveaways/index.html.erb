<div class="columns is-mobile is-multiline is-centered">
    <% @giveaways.each do |giveaway|%>
        <div class="box radius-large">
            <div class="column is-narrow">
                <p class="bd-notification is-primary">
                <code class="html"><small> <%= giveaway.location %></small></code><br>
                    <strong><%= link_to giveaway.title.truncate(15), giveaway_path(giveaway) %></strong>
                </p>
                <figure class="image is-128x128">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                </figure>
                <footer class="footer">
                    <div class="content has-text-centered">
                        <p>
                            <%= link_to "Edit", edit_giveaway_path(giveaway) %>
                            <%= link_to "Delete", giveaway_path(giveaway), method: :delete,
                                        data: { confirm: 'Are you sure you want to delete this giveaway?'} 
                            %>
                        </p>
                    </div>
                </footer>
            </div>
        </div>
    <% end %>
</div>