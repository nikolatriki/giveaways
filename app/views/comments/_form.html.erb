<div class="column is-6 is-offset-3">
  <%= form_with model: [@giveaway, @new_comment], local: true do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_area :body, required: true, class:"textarea", placeholder:"Leave a comment..." %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%=f.submit 'Post comment', class:"button is-link" %>
      </div>
    </div>
  <% end %>
</div>